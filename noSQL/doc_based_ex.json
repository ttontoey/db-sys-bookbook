{
   "title": "Book",
   "bsonType" : "object",
   "required": ["bookid", "title", "bookPhotoURL"],
   "properties": {
      "bookid": { "bsonType": "objectId" },
      "title": { "bsonType": "string", "maxLength": 200},
      "author": { "bsonType": "string", "maxLength": 100 },
      "description": { "bsonType": "string" },
      "bookPhotoURL": { "bsonType": "string" },
      "ISBN": { "bsonType": "string", "maxLength": 13 },
      "isApproved": { "bsonType": "bool", "default": false },
      "approvedOn": { "bsonType": "date" },
      "rejectedOn": { "bsonType": "date" },
      "moderatedBy": { "bsonType": "int" },
      "addedBy": { "bsonType": "int" },
      "page": { "bsonType": "int", "min": 1 },
      "emp_phone": {
         "bsonType": "string",
         "pattern": "/^[0-9]{3}-[0-9]{7}$"
      },
      "emp_ssn": {
         "bsonType": "string",
         "pattern": "/^[0-9]{3}-[0-9]{2}-[0-9]{3}$"
      },
      "emp_dob": { "bsonType": "date" },
      "emp_dependents": {
         "bsonType": "array",
         "items": {
            "bsonType": "object",
            "properties": {
               "dep_id": { "bsonType": "string" },
               "dep_fname": { "bsonType": "string" },
               "dep_lastname": { "bsonType": "string" },
               "dep_dob": { "bsonType": "date" }
            }
         }
      }
   }
}
